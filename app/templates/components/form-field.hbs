{{#if labelText}}
  <label>{{labelText}}</label>
{{/if}}

{{#if hasBlock}}
  {{yield (get object propertyPath) (action "update") disabled}}
{{else}}
  {{component type value=(get object propertyPath)
                   name=name
                   componentProperties=options
                   updated=(action "update")
                   disabled=disabled}}
{{/if}}

{{after}}
