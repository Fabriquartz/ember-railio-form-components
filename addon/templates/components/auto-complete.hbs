{{#if multiSelect}}
  {{#power-select-multiple options=groupedContent
                           selected=value
                           placeholder=prompt
                           search=onQueryChange
                           searchEnabled=searchEnabled
                           searchField=optionLabelPath
                           onchange=updated
                           classNames="auto-complete auto-complete--multiple"
                           as |item|}}
    {{#if hasBlock}}
      {{yield item}}
    {{else}}
      {{get item optionLabelPath}}
    {{/if}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select options=groupedContent
                  selected=value
                  search=onQueryChange
                  searchEnabled=searchEnabled
                  searchField=optionLabelPath
                  searchPlaceholder=prompt
                  onchange=updated
                  allowClear=allowClear
                  classNames="auto-complete"
                  placeholder=prompt
                  as |item|}}
    {{#if hasBlock}}
      {{yield item}}
    {{else}}
      {{get item optionLabelPath}}
    {{/if}}
  {{/power-select}}
{{/if}}
