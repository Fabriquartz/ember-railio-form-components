{{#if cycle}}
  {{#if value}}
    {{railio-radio-button optionLabelPath=optionLabelPath
                          optionValuePath=optionValuePath
                          option=value
                          selection=value
                          updated=(fn this.selectItem)
                          inline=inline}}
  {{else}}
    {{railio-radio-button optionLabelPath=optionLabelPath
                          optionValuePath=optionValuePath
                          option=defaultEmpty
                          selection=defaultEmpty
                          updated=(fn this.selectItem)
                          classNames="radio-select__option--empty"
                          inline=inline}}
  {{/if}}
{{else}}
  {{#each options as |option|}}
    {{railio-radio-button optionLabelPath=optionLabelPath
                          optionValuePath=optionValuePath
                          option=option
                          selection=value
                          updated=(fn this.selectItem)
                          showIcon=showIcon
                          inline=inline}}
  {{/each}}
{{/if}}
