{{form-field type="number-field"
             object=object
             propertyPath="number"
             after=object.number
             updated=(action "update")}}
<br>
{{form-field type="text-field"
             object=object
             propertyPath="text"
             after=object.text
             updated=(action "update")}}
<br>
{{form-field type="date-picker"
             object=object
             propertyPath="date"
             after=object.date
             updated=(action "update")}}

<br>
{{form-field type="date-time-field"
             object=object
             propertyPath="date"
             after=object.date
             updated=(action "update")}}

<br>
{{form-field type="lazy-text-field"
             object=object
             propertyPath="text"
             after=object.text
             updated=(action "update")}}
<br>
{{#form-field object=object
              propertyPath="radioValue"
              updated=(action "update")
              disabled=disabled
              as |value updated|}}
  {{radio-select options=optionList
                 value=value
                 updated=updated}}
{{/form-field}}
<br>
{{form-field type="text-area"
             options=textAreaOptions
             object=object
             propertyPath="textArea"
             updated=(action "update")
             disabled=disabled}}
