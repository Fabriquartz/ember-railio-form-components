                   object=object
                   propertyPath="text"
                   updated=(action "update")
                   disabled=disabled}}
<br>
{{paper-form-field type="lazy-text-field"
                   object=object
                   propertyPath="text"
                   updated=(action "update")
                   disabled=disabled}}
<br>
{{paper-form-field type="number-field"
                   object=object
                   propertyPath="number"
                   updated=(action "update")
                   disabled=disabled}}
<br>
{{paper-form-field type="date-picker"
                   object=object
                   propertyPath="date"
                   updated=(action "update")
                   disabled=disabled}}
<br>
{{paper-form-field type="text-field"
                   object=object
                   propertyPath="text"
                   updated=(action "update")
                   options=timeFieldOptions
                   disabled=disabled}}
<br>
{{paper-form-field type="check-box"
                   object=object
                   propertyPath="boolean"
                   updated=(action "update")
                   disabled=disabled}}
<br>
{{paper-form-field type="radio-group"
                   object=object
                   propertyPath="radioSelect"
                   options=paperRadioGroupOptions
                   updated=(action "update")
