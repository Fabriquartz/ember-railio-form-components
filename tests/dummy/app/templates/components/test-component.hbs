{{form-field type="number-field"
             object=object
             propertyPath="number"
             after=object.number
             updated=(action "update")}}
<br/>
{{form-field type="text-field"
             object=object
             propertyPath="text"
             after=object.text
             updated=(action "update")}}
<br/>
{{form-field type="lazy-text-field"
             object=object
             propertyPath="text"
             after=object.text
             updated=(action "update")}}
<br/>
{{#form-field object=object
              propertyPath="radioValue"
              updated=(action "update")
              disabled=disabled
              as |value updated disabled|}}
  {{radio-select options=optionList
                 value=value
                 updated=updated}}
{{/form-field}}
<br/>

{{form-field type="text-area"
             options=textAreaOptions
             object=object
             propertyPath="textArea"
             updated=(action "update")
             disabled=disabled}}

<br/>

{{form-field type="date-time-field"
             object=object
             propertyPath="date"
             updated=(action "update")
             classNames="editor-block__item"}}

<br/>

{{paper-form-field type="paper-text-field"
             object=object
             propertyPath="text"
             after=object.text
             updated=(action "update")}}
<br/>

{{paper-form-field type="paper-lazy-text-field"
             object=object
             propertyPath="text"
             after=object.text
             updated=(action "update")}}
<br/>

{{paper-form-field type="paper-number-field"
             object=object
             propertyPath="number"
             after=object.number
             updated=(action "update")}}
<br/>

{{paper-form-field type="paper-text-area"
             object=object
             propertyPath="textArea"
             after=object.text
             updated=(action "update")}}
<br/>

{{paper-form-field type="paper-date-time-field"
             object=object
             propertyPath="date"
             updated=(action "update")
             classNames="editor-block__item"}}
<br/>
